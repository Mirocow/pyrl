# 05. ФУНКЦИИ
# ============================================

print("=== Simple Function ===")
def greet():
    print("Hello, World!")

greet()

print("=== Function with Parameters ===")
def greet_person($name):
    print("Hello, " + $name + "!")

greet_person("Alice")

print("=== Function with Return ===")
def add($a, $b):
    return $a + $b

$result = add(10, 20)
print("10 + 20 = " + str($result))

print("=== Recursive Function (Factorial) ===")
def factorial($n):
    if $n <= 1:
        return 1
    return $n * factorial($n - 1)

$fact5 = factorial(5)
print("factorial(5) = " + str($fact5))

print("=== Functions Demo Complete ===")
