# Pyrl Configuration File
# Copy this file to .env and modify as needed

# Data directory for Pyrl files
PYRL_DATA_DIR=./data

# Models directory for trained models
PYRL_MODELS_DIR=./models

# Examples directory for code examples
PYRL_EXAMPLES_DIR=./examples

# Logs directory
PYRL_LOGS_DIR=./logs

# Cache directory
PYRL_CACHE_DIR=./cache

# Database path
PYRL_DATABASE_PATH=./data/pyrl.db

# Debug mode (true/false)
PYRL_DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
PYRL_LOG_LEVEL=INFO

# Server configuration
PYRL_SERVER_HOST=0.0.0.0
PYRL_SERVER_PORT=8000

# Maximum number of examples to generate
PYRL_MAX_EXAMPLES=10000
