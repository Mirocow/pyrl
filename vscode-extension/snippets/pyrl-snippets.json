{
    "Variable Assignment (Scalar)": {
        "prefix": "var",
        "body": "\\$${1:name} = ${2:value}",
        "description": "Create a scalar variable"
    },
    "Variable Assignment (Array)": {
        "prefix": "arr",
        "body": "@${1:name} = [${2:items}]",
        "description": "Create an array variable"
    },
    "Variable Assignment (Hash)": {
        "prefix": "hash",
        "body": "%${1:name} = {\"${2:key}\": ${3:value}}",
        "description": "Create a hash variable"
    },
    "Function Definition": {
        "prefix": "func",
        "body": [
            "&${1:name}(${2:params}) = {",
            "\t${3:# body}",
            "}"
        ],
        "description": "Define a function"
    },
    "If Statement": {
        "prefix": "if",
        "body": [
            "if ${1:condition} {",
            "\t${2:# body}",
            "}"
        ],
        "description": "If statement"
    },
    "If-Else Statement": {
        "prefix": "ifelse",
        "body": [
            "if ${1:condition} {",
            "\t${2:# if body}",
            "} else {",
            "\t${3:# else body}",
            "}"
        ],
        "description": "If-else statement"
    },
    "For Loop": {
        "prefix": "for",
        "body": [
            "for \\$${1:item} in @${2:array} {",
            "\t${3:# body}",
            "}"
        ],
        "description": "For loop"
    },
    "While Loop": {
        "prefix": "while",
        "body": [
            "while ${1:condition} {",
            "\t${2:# body}",
            "}"
        ],
        "description": "While loop"
    },
    "Test Block": {
        "prefix": "test",
        "body": [
            "test \"${1:test name}\" {",
            "\t${2:# assertions}",
            "}"
        ],
        "description": "Test block"
    },
    "Assertion (Equality)": {
        "prefix": "assert",
        "body": "assert ${1:left} == ${2:right}",
        "description": "Assertion with equality check"
    },
    "Vue Component": {
        "prefix": "vue",
        "body": [
            "vue \"${1:ComponentName}\" {",
            "\t${2:prop}: ${3:value}",
            "}"
        ],
        "description": "Vue component generation"
    },
    "Regex Literal": {
        "prefix": "regex",
        "body": "r\"${1:pattern}\"",
        "description": "Regex literal"
    },
    "Regex Match": {
        "prefix": "match",
        "body": "\\$${1:string} =~ r\"${2:pattern}\"",
        "description": "Regex match operation"
    },
    "Print Statement": {
        "prefix": "print",
        "body": "print(${1:value})",
        "description": "Print statement"
    },
    "Return Statement": {
        "prefix": "return",
        "body": "return ${1:value}",
        "description": "Return statement"
    },
    "Hash Access": {
        "prefix": "hget",
        "body": "%${1:hash}[\"${2:key}\"]",
        "description": "Hash access"
    },
    "Hash Assignment": {
        "prefix": "hset",
        "body": "%${1:hash}[\"${2:key}\"] = ${3:value}",
        "description": "Hash assignment"
    },
    "Array Access": {
        "prefix": "aget",
        "body": "@${1:array}[${2:index}]",
        "description": "Array access"
    },
    "Function Call": {
        "prefix": "call",
        "body": "&${1:function}(${2:args})",
        "description": "Function call"
    }
}
